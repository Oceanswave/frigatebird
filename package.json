{
	"name": "frigatebird",
	"version": "0.3.2",
	"description": "Playwright-first X CLI with bird-style parity and resilient web automation",
	"type": "module",
	"main": "./dist/cli.js",
	"license": "MIT",
	"author": "Sean McLellan",
	"repository": {
		"type": "git",
		"url": "https://github.com/Oceanswave/frigatebird.git"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"keywords": [
		"x",
		"twitter",
		"cli",
		"automation",
		"playwright",
		"bird",
		"lists"
	],
	"files": [
		"dist",
		"README.md",
		"CHANGELOG.md",
		"LICENSE",
		"SKILL.md",
		"SPEC.md",
		"TASKS.md"
	],
	"bin": {
		"frigatebird": "./dist/cli.js"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsx src/cli.ts",
		"start": "node dist/cli.js",
		"test": "vitest --config vitest.config.ts",
		"test:run": "vitest run --config vitest.config.ts",
		"test:coverage": "vitest run --config vitest.config.ts --coverage",
		"test:e2e": "vitest run --config vitest.e2e.config.ts",
		"test:e2e:live": "tsx scripts/run-live-e2e.ts",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"release:check": "npm run lint && npm run build && npm run test:coverage",
		"smoke:pack-install": "bash scripts/smoke-pack-install.sh",
		"prepublishOnly": "npm run release:check"
	},
	"dependencies": {
		"@steipete/sweet-cookie": "^0.1.0",
		"commander": "^13.0.0",
		"json5": "^2.2.3",
		"kleur": "^4.1.5",
		"playwright": "^1.49.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.0",
		"@types/node": "^22.0.0",
		"@vitest/coverage-v8": "^3.2.4",
		"tsx": "^4.19.0",
		"typescript": "^5.7.0",
		"vitest": "^3.2.4"
	}
}
